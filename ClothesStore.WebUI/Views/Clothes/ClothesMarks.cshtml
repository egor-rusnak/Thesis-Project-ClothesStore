@model MarksListViewModel

@{
    ViewData["Title"] = "Розміри для одягу - " + Model.Clothes.Name;
}

<hr/>
<h1>@Model.Clothes.Name</h1>

<a asp-action="AddMark" asp-route-id="@Model.Clothes.Id" asp-route-returnUrl="@Context.Request.PathAnQuery()">Додати</a>
    <table class="table table-bordered">
       <thead>
           <tr>
               <th>
                   Розмір
               </th>
               <th>
                   Кількість
               </th>
               <th> </th>
           </tr>
       </thead>
       <tbody>
           @foreach (var mark in Model.Marks)
           {
               <tr>
                   <td>
                       @mark.Size.Mark
                   </td>
                   <td>
                       @mark.CountInStock
                   </td>
                   <td>
                       <a asp-action="DeleteMark" asp-route-id="@mark.Id">Вилучити</a>
                       <a  asp-action="EditMark" asp-route-id="@mark.Id" asp-route-returnUrl="@Context.Request.PathAnQuery()">
                           Змінити
                       </a>
                   </td>
               </tr>
           }
       </tbody>

    </table>