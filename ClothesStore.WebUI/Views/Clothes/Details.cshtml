@model EditViewModel<ClothesViewModel>

@{
    ViewData["Title"] = @Model.Entity.Name;
}

<div>
    <h4>@Model.Entity.Name</h4>
    <hr />
    <img src="~/uploads/clothes/@Model.Entity.Image"/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.Cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.Sizes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Sizes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Entity.Id">Edit</a> |
    <a href="@Model.ReturnUrl">Back</a>
</div>
