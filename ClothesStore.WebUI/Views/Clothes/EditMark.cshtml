@model MarkViewModel 
@{
    ViewData["Title"] = "Кількість за розміром";
}
<h3>Для @Model.ClothesName</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="EditMark">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Entity.CountInStock" class="control-label"></label>
                <input asp-for="Entity.CountInStock" class="form-control" />
                <span asp-validation-for="Entity.CountInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entity.SizeId" class="control-label"></label>
                @Html.DropDownListFor(e => e.Entity.SizeId, new SelectList(ViewBag.Sizes, "Id", "Mark"))
                <span asp-validation-for="Entity.SizeId" class="text-danger"></span>
            </div>
          
            <input type="hidden" asp-for="Entity.Id" />
            <input type="hidden" asp-for="Entity.ClothesId" />
            <input type="hidden" asp-for="ClothesName"/>
            <input type="hidden" asp-for="ReturnUrl"/>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Model.ReturnUrl">Повернутись</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
