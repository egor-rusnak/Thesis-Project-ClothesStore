@model Order
@{
    ViewData["Title"] = "Замовлення";
}
<h2>Замовлюй!</h2>
<p>Введіть інформацію!</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>Адреса:</h3>
    <div class="form-group">
        <label>Ваще ім'я</label>
        <input asp-for="Client.Name"  class="form-control"/>
    </div>
    <div class="form-group">
        <label>Ваш телефон:</label>
        <input asp-for="Client.PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Метод оплати:</label>
        <select asp-for="PayMethod" class="form-control">
            <option value="0">Передоплата</option>
            <option value="1">При отриманні</option>
        </select>
    </div>
    <div class="form-group">
        <label>Місто:</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Поштовий індекс:</label>
        <input asp-for="PostalCode" class="form-control" />
    </div>
    <div class="form-group">
        <label>Адреса призначення:</label>
        <input asp-for="ShipAddress" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Замовити" />
    </div>
</form>